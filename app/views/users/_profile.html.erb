<% if flash[:notice] %>
  <%= flash[:notice] %>
<% end %>

<h2>User info</h2>

<div class="profile-container">
	<% if user.profile_image.present? %>
	    <%= attachment_image_tag user, :profile_image, :fill, 100, 100 %>
	<% else %>
	    <%= image_tag 'no_images.jpg', size: '100x100' %>
	<% end %><br>
	<table class="table">
		<tbody>
			<tr>
				<td>name</td>
				<td><%= user.name %></td>
			</tr>
			<tr>
				<td>introduction</td>
				<td><%= user.introduction %></td>
			</tr>
		</tbody>
	</table>
</div>

<% if user == current_user %>
	<%= link_to edit_user_path(user), class: "btn btn-default btn-block" do %>
		<span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
	<% end %>
<% end %>