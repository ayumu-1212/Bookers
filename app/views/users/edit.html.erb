<div class="col-lg-10">

	<h2>User info</h2>

	<%= form_for(@user) do |f| %>
		<% if @user.errors.any? %>
			<h2><%= @user.errors.count %>件のエラーが発生しました。</h2>
			<ul>
			<% @user.errors.full_messages.each do |message| %>
				<li> <%= message %></li>
			<% end %>
			</ul>
		<% end %>

		<label for="inputName"> Name</label>
		<%= f.text_field :name, autofocus: true, id:"inputName"%><br>

		<label for="user_profile_image"> image</label>
		<%= f.attachment_field :profile_image %>

		<label for="inputIntroduction"> Introduction</label>
		<%= f.text_area :introduction, autofocus:true, id:"inputIntroduction" %><br>

		<%= f.submit "update user" %>

	<% end %>

</div>

