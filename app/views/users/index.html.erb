<div class="col-lg-3">
	<div class="row">
		<%= render 'users/profile', user: @user %>
	</div>
	<div class="row">
		<%= render 'books/new', book: @book %>
	</div>
</div>
<div class="col-lg-7">
	<h2>Users</h2>
	<table class="table">
		<thead>
			<tr>
				<th>image</th>
				<th>name</th>
				<th></th>
			</tr>
		</thead>
		<% @users.each do |user| %>
			<tbody>
				<tr>
					<td>
						<% if user.profile_image.present? %>
						    <%= attachment_image_tag user, :profile_image, :fill, 50, 50 %>
						<% else %>
						    <%= image_tag 'no_images.jpg', size: '50x50' %>
						<% end %>
					</td>
					<td>
						<%= user.name %>
					</td>
					<td>
						<%= link_to "show", user_path(user) %>
					</td>
				</tr>
			</tbody>
		<% end %>
	</table>
</div>