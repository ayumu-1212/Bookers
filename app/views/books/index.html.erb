<h2>Books</h2>

<table>
	<tr>
		<th></th>
		<th>title</th>
		<th>opinion</th>
	</tr>
	<% @books.each do |book| %>
		<tr>
			<td>
				<%= attachment_image_tag book.user, :profile_image %>
			</td>
			<td>
				<%= link_to book.title, book_path(book) %>
			</td>
			<td>
				<%= book.body %>
			</td>
		</tr>
	<% end %>
</table>