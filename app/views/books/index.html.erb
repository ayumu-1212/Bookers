
<div class="col-lg-3">
	<div class="row">
		<%= render 'users/profile', user: @user %>
	</div>
	<div class="row">
		<% if @book.errors.any? %>
			<h2><%= @book.errors.count %>件のerrorが発生しました。</h2>
			<ul>
			<% @book.errors.full_messages.each do |message| %>
				<li><%= message %></li>
			<% end %>
			</ul>
		<% end %>
	</div>
	<div class="row">
		<%= render 'books/new', book: @book %>
	</div>
</div>
<div class="col-lg-7">
	<h2>Books</h2>
	<table class="table">
		<thead>
			<tr>
				<th></th>
				<th>title</th>
				<th>opinion</th>
			</tr>
		</thead>
		<tbody>
			<% @books.each do |book| %>
				<tr>
					<td>
						<% if book.user.profile_image.present? %>
						    <%= attachment_image_tag book.user, :profile_image, :fill, 50, 50 %>
						<% else %>
						    <%= image_tag 'no_images.jpg', size: '50x50' %>
						<% end %>
					</td>
					<td>
						<%= link_to book.title, book_path(book) %>
					</td>
					<td>
						<%= book.body %>
					</td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>