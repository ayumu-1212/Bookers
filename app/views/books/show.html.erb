<div class="col-lg-3">
	<div class="row">
		<%= render 'users/profile', user: @user %>
	</div>
	<div class="row">
		<%= render 'books/new', book: @book_new %>
	</div>
</div>
<div class="col-lg-7">
	<h2>Book detail</h2>

	<% if flash[:notice] %>
		<%= flash[:notice] %>
	<% end %>
	<table class="table">
		<tbody>
			<tr>
				<td>
					<% if @book.user.profile_image.present? %>
					    <%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100 %>
					<% else %>
					    <%= image_tag 'no_images.jpg', size: '100x100' %>
					<% end %> <br>
					<%= link_to @book.user.name, user_path(@book.user) %>
				</td>
				<td>
					<%= @book.title %><br>
				</td>
				<td>
					<%= @book.body %><br>
				</td>
			<% if @book.user == current_user%>
				<td>
					<%= link_to "Edit", edit_book_path(@book), class: "btn btn-success" %>
				</td>
				<td>
					<%= link_to "Destroy", book_path(@book), class: "btn btn-danger", method: :delete, "data-confirm" => "本当に消しますか？" %>
				</td>
			<% end %>
			</tr>
		</tbody>
	</table>
</div>